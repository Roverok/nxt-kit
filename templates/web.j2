<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app>
    <servlet>
        <servlet-name>Nxt</servlet-name>
        <servlet-class>nxt.Nxt</servlet-class>
        <async-supported>true</async-supported>
        <load-on-startup>1</load-on-startup>

        <init-param>
            <param-name>myScheme</param-name>
            <param-value>http</param-value>
        </init-param>

        <init-param>
            <param-name>myPort</param-name>
            <param-value>7874</param-value>
        </init-param>

        <init-param>
            <param-name>myAddress</param-name>
            <param-value>{{ inventory_hostname }}</param-value>
        </init-param>

        <init-param>
            <param-name>shareMyAddress</param-name>
            <param-value>true</param-value>
        </init-param>

        <init-param>
            <param-name>myPlatform</param-name>
            <param-value>nxt.now.im</param-value>
        </init-param>

        <init-param>
            <param-name>myHallmark</param-name>
            <param-value>{% set hallmark_default = "{\"hallmark\":\"{{ hallmark_predef|default("") }}\"}" %}{% set hallmark_stdout = hallmark_result.stdout|default(hallmark_default) %}{% set hallmark_jsoned = hallmark_stdout|from_json %}{{ hallmark_jsoned.hallmark }}</param-value>
